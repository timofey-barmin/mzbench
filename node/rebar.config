{erl_opts, [
    {parse_transform, lager_transform},
    warn_unused_vars,
    warn_export_all,
    warn_shadow_vars,
    warn_unused_import,
    warn_unused_function,
    warn_bif_clash,
    warn_unused_record,
    warn_deprecated_function,
    warn_obsolete_guard,
    strict_validation,
    warn_export_vars,
    warn_exported_vars
]}.

{sub_dirs, ["apps/*", "rel", "deps"]}.

{deps, [
        {lager, ".*",
            {git, "git://github.com/basho/lager.git", {tag, "2.1.1"}}},
        {ranch, ".*",
            {git, "git://github.com/ninenines/ranch.git", {tag, "1.1.0"}}},
        {exometer_core, ".*",
            {git, "git://github.com/Feuerlabs/exometer_core.git", "30018abb62d4bfc7130d43f90a9783e6e8041e78"}},
        {exometer, ".*",
            {git, "git://github.com/Feuerlabs/exometer.git", "3341fc56019f71adab0e433fa5f9a5bcafd24907"}},
        {jiffy, ".*",
            {git, "git://github.com/davisp/jiffy.git", {tag, "0.13.2"}}},
        {luerl, ".*",
            {git , "git://github.com/rvirding/luerl.git", "8ef173e03d1b1e35883651164d34afb9ecf1acba"}},
        {mz_bench_language, ".*", {rsync, "../common_apps/mz_bench_language"}},
        {mz_bench_utils, ".*", {rsync, "../common_apps/mz_bench_utils"}},
        {hdr_histogram, ".*",
            {git, "git://github.com/HdrHistogram/hdr_histogram_erl.git", {tag, "0.2.6"}}}]}.

{deps_dir, "deps"}.
{lib_dirs, ["deps", "apps"]}.
{eunit_opts, [verbose, {report, {eunit_surefire, [{dir, "."}]}}]}.
{recursive_cmds, [eunit, xref, clean]}.
