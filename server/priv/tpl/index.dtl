{% extends "layout.dtl" %}

{% block container %}
<div class="row">
    <table id="mz-bench-report" class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th class="col-sm-2">Date</th>
                <th>Scenario</th>
                <th>Status</th>
                <th>Duration</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>
<hr />
{% endblock %}

{% block javascript %}
<script type="text/javascript" charset="utf-8">
    $(document).ready(function() {
        var refreshInterval = {{ refreshInterval }};
        var table = $('#mz-bench-report').DataTable({
          ordering: false,
          ajax: 'report.json',
          pageLength: 25,
          columnDefs: [
              {
                  "render": function ( data, type, row ) {
                      return moment(data).format("lll");
                  },
                  "targets": 1
              },
              {
                  "render": function ( data, type, row ) {
                      var css_class;
                      switch (data) {
                        case "complete":
                          css_class = "label-success";
                          break;
                        case "failed":
                          css_class = "label-danger";
                          break;
                        case "stopped":
                          css_class = "label-default";
                          break;
                        default:
                          css_class = "label-info";
                          break;
                      }
                      return "<span class=\"label " + css_class + "\">" + data + "</span>"
                  },
                  "targets": 3
              },
              {
                  "render": function ( data, type, row ) {
                      return data + " secs";
                  },
                  "targets": 4
              },
              {
                  "render": function ( data, type, row ) {
                      var graphs = data ? '<a href="graphs?id=' + row[0] + '">graphs</a>' : "no graphs";
                      var logs = '<a href="logs?id=' + row[0] + '">logs</a>';
                      var metrics = '<a href="data?id=' + row[0] + '">metrics</a>';
                      var restart = '<a href="restart?id=' + row[0] + '" class="background_call" data-name="restart bench #' + row[0] + '">restart</a>';
                      var stop = '<a href="stop?id=' + row[0] + '" class="background_call" data-name="stop bench #' + row[0] + '">stop</a>';
                      var report = '<a href="email_report?id=' + row[0] + '" class="background_prompt_call" data-info="Email address" data-prompt-param="addr">email</a>'

                      var res = [graphs, logs, metrics, report, restart];

                      if (['stopped', 'complete', 'failed', 'crashed'].indexOf(row[3]) == -1) {
                          res.push(stop);
                      }

                      return res.join(" | ");
                  },
                  "targets": 5
              },
          ]
        });

        setInterval( function () {
            table.ajax.reload( null, false ); // user paging is not reset on reload
        }, refreshInterval);

        table.on('click', '.background_call', function () {
            if (confirm('Are you sure want to ' + $(this).data('name') + '?')) {
                $.ajax({
                    type: 'GET',
                    url: this.href,
                    contentType: 'application/json',
                    success: function () {
                        table.ajax.reload(null, false);
                    }
                });
            }
            return false;
        });

        table.on('click', '.background_prompt_call', function () {
            var email = prompt($(this).data('info'));
            var param_name = $(this).data('prompt-param');
            if (email) {
                $.ajax({
                    type: 'GET',
                    url: this.href + '&' + param_name + '=' + email,
                    contentType: 'application/json',
                    success: function () {
                        table.ajax.reload(null, false);
                    }
                });
            }
            return false;
        });

    });
</script>
{% endblock %}
