{erl_opts, [
    {parse_transform, lager_transform},
    warn_unused_vars,
    warn_export_all,
    warn_shadow_vars,
    warn_unused_import,
    warn_unused_function,
    warn_bif_clash,
    warn_unused_record,
    warn_deprecated_function,
    warn_obsolete_guard,
    strict_validation,
    warn_export_vars,
    warn_exported_vars,
    warn_missing_spec
]}.

{deps, [
        {lager, ".*",
            {git, "git://github.com/basho/lager.git", {tag, "2.1.1"}}},
        {pretty_errors, ".*",
            {git, "git://github.com/ethercrow/pretty_errors", "445d2aa1c10dd8e0fc1cc811b248a7494f838cc9"}},
        {mzbench_utils, ".*",
            {rsync, "../mzbench_utils"}}
        ]}.

{deps_dir, "deps"}.
{lib_dirs, ["deps"]}.
{eunit_opts, [verbose, {report, {eunit_surefire, [{dir, "."}]}}]}.
{recursive_cmds, [eunit, xref, clean]}.
